<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bank Accounts</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
  <table class="table table-striped">
    <thead class="table-dark">
      <tr>
        <th scope="col">Account Number</th>
        <th scope="col">Account Name</th>
        <th scope="col">Account Type</th>
        <th scope="col">Balance Date</th>
        <th scope="col">Currency</th>
        <th scope="col">Opening Available Balance</th>
      </tr>
    </thead>
    <tbody>
      <% for (let account of accounts) { %>
      <tr>
          <th scope="row" class="account__number"><a href="/transactions/<%= account.id %>" style="text-decoration: none; color: black; font-weight: normal;"><%= account.accountNumber %></a></th>
          <td class="account__name"><%= account.accountName %></td>
          <td class="account__type"><%= account.accountType %></td>
          <td class="account_balanceDate"><%= account.balanceDate %></td>
          <td class="account_currency"><%= account.currency %></td>
          <td class="account_openingAvailableBalance" style="color:rgb(112, 246, 112); text-align: right;"><%= account.openingAvailableBalance.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ',') %></td>
        </tr>
        <% } %>  
    </tbody>
  </table>
</body>
</html>