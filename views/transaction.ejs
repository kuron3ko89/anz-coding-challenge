<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bank Accounts</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
  <table class="table table-striped">
    <thead class="table-dark">
      <tr>
        <th scope="col">Account Number</th>
        <th scope="col">Account Name</th>
        <th scope="col">Value Date</th>
        <th scope="col">Currency</th>
        <th scope="col">Debit Amount</th>
        <th scope="col">Credit Amount</th>
        <th scope="col">Debit/Credit</th>
        <th scope="col">Transaction Narrative</th>
      </tr>
    </thead>
    <tbody>
      <% for (let transaction of transactions) { %>
      <tr>
          <th scope="row" class="account__number" style="font-weight: normal;"><%= transaction.account.accountNumber %></th>
          <td class="account__name"><%= transaction.account.accountName %></td>
          <td class="transaction__valueDate"><%= transaction.valueDate %></td>
          <td class="account_currency"><%= transaction.currency %></td>
          <td class="account_debitAmount" style="color:#f6515f;"><% if (transaction.debitAmount !== null) { %><%= transaction.debitAmount.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ',') %><% } %></td>
          <td class="account_creditAmount" style="color:#70f670;"><% if (transaction.creditAmount !== null) { %><%= transaction.creditAmount.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ',') %><% } %></td>
          <td class="account_debitCredit"><%= transaction.debitCredit %></td>
          <td class="transaction__Narrative"><%= transaction.transactionNarrative %></td>
        </tr>
        <% } %>  
    </tbody>
  </table>
  <div class="back__button">
    <a href="/" type="btn">Back</a>
  </div>
</body>
</html>